<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideProfileActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp">


        <TextView
            android:id="@+id/temp_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_guideName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_toRightOf="@id/temp_text1"
            android:text="Venugopal"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/temp_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_text1"
            android:layout_marginBottom="32dp"
            android:text="Age:"
            android:textColor="@android:color/black"
            android:textSize="32sp" />


        <TextView
            android:id="@+id/tv_guideAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_guideLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_guideRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/temp_text4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Ratings:"
            android:textColor="@android:color/black"
            android:textSize="32sp" />


        <TextView
            android:id="@+id/temp_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language:"
            android:textColor="@android:color/black"
            android:textSize="32sp" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:elevation="20dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="352dp"
            android:layout_height="402dp"
            android:layout_gravity="center"
            android:src="@drawable/owl_bird_" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>